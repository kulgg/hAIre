---
import ProgressBar from "../../components/ProgressBar.astro";
import ApplicantLayout from "../../layouts/ApplicantLayout.astro";
---

<ApplicantLayout>
	<main class="mx-5 my-3">
		<h2 class="text-xl text-primary underline">
			Senior Software Engineer - Application #1282
		</h2>
		<div class="flex items-center gap-10 justify-center">
			<div class="card my-3 w-full bg-base-100 shadow-xl image-full">
				<figure>
					<img src="/arch.jpeg" alt="Arch" />
				</figure>
				<div class="card-body">
					<h2 class="card-title text-3xl">No Worries!</h2>
					<p class="text-xl text-base-100 text-center mt-10">
						Success is not final, failure is not fatal; it is the courage to
						continue that counts.
					</p>
				</div>
			</div>
		</div>
		<div class="shadow-md bg-white px-3 py-2 rounded-lg">
			<div class="text-lg italic">
				<span class="underline my-2j">Successful applicants</span> for the position
				you applied for, share the following <span class="underline"
					>characteristics</span
				>
			</div>
			<div class="my-3 flex flex-row justify-center">
				<div class="grid py-3 grid-cols-2 gap-4">
					<div>
						<h3 class="text-secondary font-semibold">Top Skills</h3>
						<ul class="px-3">
							<li>- C#</li>
							<li>- relational databases</li>
							<li>- clean architecture</li>
						</ul>
					</div>
					<div class="">
						<h4 class="text-secondary font-semibold">Highest Education</h4>
						<div class="flex flex-row justify-start items-center gap-2">
							<div class="radial-progress text-primary" style="--value:70;">
								70%
							</div>
							<div>M.Sc. CS</div>
						</div>
					</div>
					<div>
						<h4 class="text-secondary font-semibold">Years Of Experience</h4>
						<ProgressBar label="2" value="30" type="accent" />
						<ProgressBar label="3" value="40" type="accent" />
						<ProgressBar label="4" value="60" type="accent" />
						<ProgressBar label="5+" value="50" type="accent" />
					</div>
					<div>
						<h4 class="text-secondary font-semibold">Prior position</h4>
						<ProgressBar label="Junior Developer" value="25" type="success" />
						<ProgressBar label="Software Engineer" value="45" type="success" />
						<ProgressBar label="Senior Developer" value="70" type="success" />
					</div>
				</div>
			</div>
		</div>
		<div class="py-2">Potential for improvement in your application</div>
	</main>
</ApplicantLayout>

<style>
	.pie-chart {
		background: radial-gradient(circle closest-side, transparent 91%, white 0),
			conic-gradient(
				#4e79a7 0,
				#4e79a7 59.4%,
				#f28e2c 0,
				#f28e2c 95.3%,
				#e15759 0,
				#e15759 100%
			);
		position: relative;
		width: 500px;
		min-height: 350px;
		margin: 0;
		outline: 1px solid #ccc;
	}
	.pie-chart figcaption {
		position: absolute;
		bottom: 1em;
		right: 1em;
		font-size: smaller;
		text-align: right;
	}
	.pie-chart span:after {
		display: inline-block;
		content: "";
		width: 0.8em;
		height: 0.8em;
		margin-left: 0.4em;
		height: 0.8em;
		border-radius: 0.2em;
		background: currentColor;
	}
</style>
